@model HopAmNhacThanh.Models.CommonViewModels.CommonListViewModel
@foreach (var item in Model.List)
{
    <div class="row">
        <div class="col-md-4">
            @if (!item.ImageID.HasValue)
            {
                <img src="~/images/album-sample.jpg" class="img-responsive" />
            }
            else
            {
                <img src="@item.Image." alt="@item.Image.ALT" class="img-responsive" />
            }
        </div>
        <div class="col-md-8">
            <h2 style="font-size: larger"><a asp-controller="album" asp-action="single" asp-route-slug="@item.Slug">@item.Name</a></h2>
            <p>@item.Description </p>
            <p><a asp-controller="album" asp-action="single" asp-route-slug="@item.Slug" style="float:right">@Html.Raw("Xem thêm") <i class="fa fa-arrow-right"></i></a></p>
        </div>
    </div>
                    <hr />
}

