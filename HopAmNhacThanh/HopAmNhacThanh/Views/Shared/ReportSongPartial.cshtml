@model HopAmNhacThanh.Models.HomeViewModels.ReportSongViewModel

<div class="modal fade version-model" id="report-error" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">

        <!-- Modal content-->
        <form asp-action="ReportSong" asp-controller="Song" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Báo lỗi bài hát</h4>
                </div>
                <div class="modal-body">
                    <div id="thank-report" style="display: none" class="alert alert-success alert-dismissable">Cảm ơn góp ý của bạn. Chúng tôi sẽ khắc phục sớm</div>
                    <div id="form-report">
                        
                        <div class="form-group">
                            <label for="lbADNameSong">Tên bài hát:</label>
                            <input for="adNameSong" type="text" value="@Model.Name" disabled class="form-control">
                            <input asp-for="Slug" type="hidden" />
                            <input asp-for="Url" type="hidden" />
                        </div>
                        <div class="form-group">
                            <label>Loại:</label>
                            <select asp-for="Type" class="form-control">
                                <option value="1">Lời bài hát</option>
                                <option value="2">Nghe bài hát</option>
                                <option value="3">Video</option>
                                <option value="4">Khác</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Chi tiết:</label>
                            <textarea required id="error" asp-for="Error" cols="5" rows="5" class="form-control"></textarea>
                            <span id="validate-error" style="display: none; color:red; font-weight:bolder">Vui lòng nhập chi tiết lỗi</span>
                        </div>
                    </div>
                </div>
                <div id="footer-report" class="modal-footer">
                    <button id="reportSong" type="button" class="btn btn-danger">Báo cáo</button>
                </div>

            </div>
        </form>
        
</div>
</div>