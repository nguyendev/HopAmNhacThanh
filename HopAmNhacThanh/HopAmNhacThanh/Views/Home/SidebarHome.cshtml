<style>
    #list-album .panel-body {
        background: #ffffff;
        padding: 10px 15px;
        box-shadow: 1px 1px 0px #e5e5e5;
    }
    .listMenu ul li {
        padding-bottom: 5px;
        margin-bottom: 10px;
        border-bottom: solid 1px #dcdcdc;
    }
