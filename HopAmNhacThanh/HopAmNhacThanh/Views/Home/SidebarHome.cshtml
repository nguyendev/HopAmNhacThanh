<div id="rhythm" class="panel panel-default">
    <style>
        .rhythm-item:hover {
            text-decoration: none;
            color: blue;
        }
        .rhythm-item {
            white-space: nowrap;
            background-color: #ddd;
            padding: 10px 7px;
            font-size: 12px;
            line-height: 24px;
            border-radius: 4px;
            cursor: pointer;
            -webkit-transition: box-shadow .1s,background-color .1s;
            -moz-transition: box-shadow .1s,background-color .1s;
            -ms-transition: box-shadow .1s,background-color .1s;
            -o-transition: box-shadow .1s,background-color .1s;
            color: white;
            text-decoration: none;
            margin: 5px;
            transition: box-shadow .1s,background-color .1s;
            display: inline-block;
        }
    </style>
    <div class="panel-body text-center">
        <h2 class="text-primary" style="font-size:larger; font-weight:bold">Điệu bài hát</h2><hr />
       
        <div class="rhythm-list">
            @{ 
                var random = new Random();
            }
            @foreach (var item in Model.ListStyle)
            {
                var color = String.Format("#{0:X6}", random.Next(0x1000000));
                <a style="background-color: @color" class="rhythm-item" data-rhythm="ballad" href="">
                    Điệu @item.Name 
                </a>
            }
        </div>
    </div>
</div>

<div id="hot-today" class="panel panel-default">

    <style>
        .hot-today-item:nth-child(1) .hot-today-views {
            color: #ff5722;
        }

        .hot-today-item:nth-child(2) .hot-today-views {
            color: #ff9800;
        }

        .hot-today-item:nth-child(3) .hot-today-views {
            color: #FFC107;
        }

        .hot-today-item:nth-child(4) .hot-today-views {
            color: #8bc34a;
        }

        .hot-today-item .hot-today-views {
            vertical-align: middle;
            position: relative;
            width: 40px;
            height: 30px;
            display: inline-block;
            text-align: center;
            color: #cddc39;
        }

        .hot-today-item-song {
            color: black;
        }

        .hot-today-item .hot-today-views .hot-today-view-count {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            font-size: 10px;
        }

        .hot-today-item .hot-today-item-song:hover {
            text-decoration: underline;
        }

        .hot-today-item .hot-today-item-song {
            font-weight: 600;
        }

        .hot-today-item .hot-today-item-singers a {
            margin-left: 10px !important;
            font-size: 13px !important;
            color: #888 !important;
        }
    </style>
    <div class="panel-body">
        <h2 style="font-size:larger">Bài hát xem nhiều trong tuần</h2>
        <hr />
        <div class="hot-today-item">
            <span class="hot-today-views">
                <i class="fa fa-star"></i>
                @*<span class="hot-today-view-count">3257</span>*@
            </span>
            @{ 
                var number = 1;
            }
            @foreach (var item in Model.ListTopSong)
            { 
            <a class="hot-today-item-song" asp-controller="home" asp-action="single" asp-route-slug="@item.Slug" asp-route-slugVersion="@item.Version">
                @number.
                @item.Name
            </a>
            @*<span class="hot-today-item-singers">
                <a href="/artist/23465/jayk">
                    JayK
                </a>
            </span>*@
                number++;
            }
        </div>

    </div>
</div>

