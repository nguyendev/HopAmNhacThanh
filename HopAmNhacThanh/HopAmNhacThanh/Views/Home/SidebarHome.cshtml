@if (Model.ListTopAlbum.Any()) {
<div id="list-album" class="panel panel-default">
    <div class="panel-heading" style="background-color: #337ab7; color: white">
        <h2 class="panel-title" style="font-size:larger; margin-top: 0px;">Album</h2>
    </div>
    <div class="panel-body">
        <div class="listMenu">
            <ul style="padding-left: 0px;">
                @foreach(var item in Model.ListTopAlbum) { 
                <li><a asp-controller="Album" asp-action="Single" asp-route-slug="@item.Slug">@item.Name</a></li>
                }
            </ul>
        </div>
    </div>
</div>
}

<div id="rhythm" class="panel panel-default">
    <style>
        .rhythm-item:hover {
            text-decoration: none;
            color: blue;
        }
        .rhythm-item {
            white-space: nowrap;
            background-color: #ddd;
            padding: 10px 7px;
            font-size: 12px;
            line-height: 24px;
            border-radius: 4px;
            cursor: pointer;
            -webkit-transition: box-shadow .1s,background-color .1s;
            -moz-transition: box-shadow .1s,background-color .1s;
            -ms-transition: box-shadow .1s,background-color .1s;
            -o-transition: box-shadow .1s,background-color .1s;
            color: white;
            text-decoration: none;
            margin: 5px;
            transition: box-shadow .1s,background-color .1s;
            display: inline-block;
        }
    </style>
    <div class="panel-body text-center">
        <h2 class="text-primary" style="font-size:larger; font-weight:bold">Điệu bài hát</h2><hr />
       
        <div class="rhythm-list">
            @{ 
                var random = new Random();
            }
            @foreach (var item in Model.ListStyle)
            {
                var color = String.Format("#{0:X6}", random.Next(0x1000000));
                <a style="background-color: @color" class="rhythm-item" data-rhythm="ballad" href="">
                    Điệu @item.Name 
                </a>
            }
        </div>
    </div>
</div>

<div id="hot-today" class="panel panel-default">

    <div class="panel-body">
        <h2 style="font-size:larger; margin-top: 0px;">Bài hát xem nhiều trong tuần</h2>
        <hr style="margin-top: 0px;"/>
        <div>
            
            @{ 
                var number = 1;
            }
            @foreach (var item in Model.ListTopSong)
            {
                <p>
                    <a asp-controller="home" asp-action="single" asp-route-slug="@item.Slug" asp-route-slugVersion="@item.Version">
                        @number.
                        @item.Name
                    </a>
                    <span style="float:right">@item.Views <i class="fa fa-eye"></i></span> 
                </p>
            @*<span class="hot-today-item-singers">
                <a href="/artist/23465/jayk">
                    JayK
                </a>
            </span>*@
                number++;
            }
        </div>
  
    </div>
</div>

