@model HopAmNhacThanh.Areas.WebManager.ViewModels.SheetMusicViewModels.EditSheetMusicViewModel
@{
    ViewData["Title"] = "Chỉnh sửa";
    ViewData["Heading"] = "Sheet music";
    ViewData["SmallHeading"] = "";
    ViewData["BreadcrumbOne"] = "Quản lý web";
    ViewData["BreadcrumbTwo"] = "Sheet music";
    ViewData["BreadcrumbThree"] = "Chỉnh sửa sheet music";
    ViewData["BoxTitle"] = "Chỉnh sửa sheet music";
    ViewData["Search"] = "Tìm bài hát";
    Layout = "_EditLayout";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="ID" />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="SongID" class="control-label"></label>
            <select asp-for="SongID" class="form-control" asp-items="ViewBag.SongID">
                <option selected disabled>-- Chưa chọn --</option>
            </select>
            <span asp-validation-for="SongID" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-group">
            <label asp-for="Source" class="control-label"></label>
            <input asp-for="Source" class="form-control" />
            <span asp-validation-for="Source" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Number" class="control-label"></label>
            <input asp-for="Number" type="number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
    </div>
</div>