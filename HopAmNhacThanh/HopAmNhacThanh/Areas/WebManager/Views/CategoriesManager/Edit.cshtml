@model HopAmNhacThanh.Models.Category
@{
    ViewData["Title"] = "Chỉnh sửa";
    ViewData["Heading"] = "Thể loại";
    ViewData["SmallHeading"] = "";
    ViewData["BreadcrumbOne"] = "Quản lý web";
    ViewData["BreadcrumbTwo"] = "Thể loại";
    ViewData["BreadcrumbThree"] = "Chỉnh sửa thể loại";
    ViewData["BoxTitle"] = "Chỉnh sửa thể loại";
    ViewData["Search"] = "Tìm thể loại";
    Layout = "_EditLayout";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="ID" />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Slug" class="control-label"></label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row col-md-12">
        <div class="form-group">
            <label asp-for="Note" class="control-label"></label>
                <textarea cols="3" rows="3" asp-for="Note" class="form-control" ></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
        </div>
</div>