@model HopAmNhacThanh.Areas.WebManager.ViewModels.AlbumViewModels.EditAlbumViewModel
@{
    ViewData["Title"] = "Chỉnh sửa";
    ViewData["Heading"] = "Album";
    ViewData["SmallHeading"] = "";
    ViewData["BreadcrumbOne"] = "Quản lý web";
    ViewData["BreadcrumbTwo"] = "Album";
    ViewData["BreadcrumbThree"] = "Chỉnh sửa album";
    ViewData["BoxTitle"] = "Chỉnh sửa album";
    ViewData["Search"] = "Tìm album";
    Layout = "_EditLayout";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="ID" />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="ShortName" class="control-label"></label>
            <input asp-for="ShortName" class="form-control" />
            <span asp-validation-for="ShortName" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Image" class="control-label"></label>
            <select asp-for="Image" class="form-control" asp-items="ViewBag.ImageID">
                <option disabled selected>- Chưa chọn -</option>
            </select>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Slug" class="control-label"></label>
            <input asp-for="Slug" class="form-control" />
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row col-md-12">
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" cols="3" rows="3" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
</div>
<div class="row col-md-12">
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control ckeditor"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
</div>
