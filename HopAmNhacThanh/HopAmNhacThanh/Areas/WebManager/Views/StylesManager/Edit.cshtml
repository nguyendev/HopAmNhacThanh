@model HopAmNhacThanh.Models.Style
@{
    string mainTitle = "Điệu";
    ViewData["Title"] = "Chỉnh sửa";
    ViewData["Heading"] = mainTitle;
    ViewData["SmallHeading"] = "";
    ViewData["BreadcrumbOne"] = "Quản lý web";
    ViewData["BreadcrumbTwo"] = mainTitle;
    ViewData["BreadcrumbThree"] = "Chỉnh sửa " + mainTitle;
    ViewData["BoxTitle"] = "Chỉnh sửa " + mainTitle;
    ViewData["Search"] = "Tìm "+mainTitle;
    Layout = "_EditLayout";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="ID" />
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Slug" class="control-label"></label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row col-md-12">
        <div class="form-group">
            <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" cols="3" rows="3" class="form-control" ></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
</div>