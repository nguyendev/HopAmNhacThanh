@using Kendo.Mvc.UI
@{
    ViewData["Title"] = "Upload Audio";
    ViewData["Heading"] = "Upload Audio";
    ViewData["SmallHeading"] = "";
    ViewData["BreadcrumbOne"] = "Quản lý web";
    ViewData["BreadcrumbTwo"] = "Audio";
    ViewData["BreadcrumbThree"] = "Tải lên";
    ViewData["BoxTitle"] = "Tải lên audio";
    ViewData["Search"] = "Tìm audio";
    Layout = "_TableIndexLayout";
}
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="demo-section k-content">
            @(Html.Kendo().Upload()
            .Name("files")
            .Async(a => a
                .Save("Save", "LinkSongsManager")
                .Remove("Remove", "LinkSongsManager")
                .AutoUpload(true)
            )
            .Validation(validation => validation.AllowedExtensions(new string[] { ".mp3" }))
            )
            <div class="demo-hint">
                Bạn chỉ có thể tải lên <strong>MP3</strong>
            </div>
        </div>
    </div>
</div>
