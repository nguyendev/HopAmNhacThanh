@model HopAmNhacThanh.Areas.WebManager.ViewModels.LinkSongViewModels.IndexLinkSongViewModel

@{
    ViewData["Title"] = "Index";
    ViewData["Heading"] = "Danh sách hợp âm";
    ViewData["SmallHeading"] = "";
    ViewData["BreadcrumbOne"] = "Quản lý web";
    ViewData["BreadcrumbTwo"] = "Hợp âm";
    ViewData["BreadcrumbThree"] = "Danh sách hợp âm";
    ViewData["BoxTitle"] = "Danh sách hợp âm";
    ViewData["Search"] = "Tìm hợp âm";
    Layout = "_TableIndexLayout";
}
<div class="text-center" style="margin-bottom: 10px;"><a asp-controller="LinkSongsManager" asp-action="Upload" class="btn btn-success">Tải lên tập tin âm thanh</a></div>
<div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

    <div class="row">
        @Html.Partial("_SearchIndexPartial", Model)
    </div>

    <div class="row">
        <div class="col-md-12 table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["SongParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.ListLinkSong.First().Song.Name)</a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.ListLinkSong.First().Name)</a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["SingleSongParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.ListLinkSong.First().SingleSong.Name)</a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["ToneParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.ListLinkSong.First().Tone)</a>
</th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["CreateDTParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.ListLinkSong.First().CreateDT)</a>
</th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["ApprovedParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(model => model.ListLinkSong.First().Approved)</a>
</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListLinkSong)
                    {
                        <tr>
                            <td>
                                @if(item.Song != null) { 
                                @Html.DisplayFor(modelItem => item.Song.Name)
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @if (item.SingleSong != null)
                                {
                                    @Html.DisplayFor(modelItem => item.SingleSong.Name)
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tone)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDT)
                            </td>

                            <td>
                                @if (item.Approved == "A")
                                {
                                    @Html.Raw("Đã duyệt")
                                }
                                else
                                {
                                    @Html.Raw("Chưa duyệt")
                                }
                            </td>
                            <td>
                                @if (item.Approved != "A")
                                {
                                    <a asp-action="EditPublishDT" asp-route-id="@item.ID" class="btn btn-default fa fa-clock-o"></a>
                                    <a asp-action="EditApproved" asp-route-id="@item.ID" class="btn btn-primary fa fa-check"></a>
                                }
                                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning fa fa-edit"></a>
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-success fa fa-newspaper-o"></a>
                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger fa fa-remove"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        @Html.Partial("_PageIndexPartial", Model)
    </div>
</div>