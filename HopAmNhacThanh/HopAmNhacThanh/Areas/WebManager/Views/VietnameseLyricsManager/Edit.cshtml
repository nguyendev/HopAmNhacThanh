@model HopAmNhacThanh.Areas.WebManager.ViewModels.VietnameseLyricViewModels.EditVietnameseLyricViewModel
@{
    ViewData["Title"] = "Chỉnh sửa";
    ViewData["Heading"] = "Dịch giả bài hát";
    ViewData["SmallHeading"] = "";
    ViewData["BreadcrumbOne"] = "Quản lý web";
    ViewData["BreadcrumbTwo"] = "Tác giả bài hát";
    ViewData["BreadcrumbThree"] = "Chỉnh sửa dịch giả bài hát";
    ViewData["BoxTitle"] = "Chỉnh sửa dịch giả bài hát";
    ViewData["Search"] = "Tìm dịch giả";
    Layout = "_EditLayout";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="ID" />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Slug" class="control-label"></label>
            <input asp-for="Slug" class="form-control" />
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="ImageID" class="control-label"></label>
            <select asp-for="ImageID" class="form-control" asp-items="ViewBag.ImageID">
                <option disabled selected>-- Chưa có -- </option>
            </select>
            <span asp-validation-for="ImageID" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row col-md-12">
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control ckeditor"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
</div>
